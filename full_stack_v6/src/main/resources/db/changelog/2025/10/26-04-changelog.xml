<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1761442318462-3" author="AJ">
        <createTable tableName="role_history">
            <column name="rev" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_role_history"/>
            </column>
            <column name="revtype" type="SMALLINT"/>
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_role_history"/>
            </column>
            <column name="role_name" type="VARCHAR(20)"/>
        </createTable>
    </changeSet>

    <changeSet id="1761442318462-4" author="AJ">
        <createTable tableName="user_history">
            <column name="rev" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_history"/>
            </column>
            <column name="revtype" type="SMALLINT"/>
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_history"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="enabled" type="BOOLEAN"/>
        </createTable>
    </changeSet>

    <changeSet id="1761442318462-5" author="AJ">
        <createTable tableName="user_role_aud">
            <column name="rev" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_role_aud"/>
            </column>
            <column name="revtype" type="SMALLINT"/>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_role_aud"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_role_aud"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1761442318462-6" author="AJ">
        <addForeignKeyConstraint baseColumnNames="rev" baseTableName="role_history"
                                 constraintName="FK_ROLE_HISTORY_ON_REV" referencedColumnNames="rev"
                                 referencedTableName="revinfo"/>
    </changeSet>

    <changeSet id="1761442318462-7" author="AJ">
        <addForeignKeyConstraint baseColumnNames="rev" baseTableName="user_history"
                                 constraintName="FK_USER_HISTORY_ON_REV" referencedColumnNames="rev"
                                 referencedTableName="revinfo"/>
    </changeSet>

    <changeSet id="1761442318462-8" author="AJ">
        <addForeignKeyConstraint baseColumnNames="rev" baseTableName="user_role_aud"
                                 constraintName="fk_user_role_aud_on_rev" referencedColumnNames="rev"
                                 referencedTableName="revinfo"/>
    </changeSet>
</databaseChangeLog>