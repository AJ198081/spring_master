<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1759518502577-2" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="revinfo-seq"/>
            </not>
        </preConditions>

        <createSequence incrementBy="50" sequenceName="revinfo_seq" startValue="1"/>
    </changeSet>

    <changeSet id="1759518502577-3" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cart_item_history"/>
            </not>
        </preConditions>

        <createTable tableName="cart_item_history">
            <column name="rev" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cart_item_history"/>
            </column>
            <column name="revtype" type="SMALLINT"/>
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cart_item_history"/>
            </column>
            <column name="cart_id" type="BIGINT"/>
            <column name="product_id" type="BIGINT"/>
            <column name="quantity" type="INT"/>
            <column name="price" type="DECIMAL"/>
            <column name="discount" type="DOUBLE"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="1759518502577-4" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="revinfo"/>
            </not>
        </preConditions>

        <createTable tableName="revinfo">
            <column name="rev" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_revinfo"/>
            </column>
            <column name="revtstmp" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="1759518502577-5" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="FK_CART_ITEM_HISTORY_ON_REV"/>
            </not>
        </preConditions>

        <addForeignKeyConstraint baseColumnNames="rev" baseTableName="cart_item_history"
                                 constraintName="FK_CART_ITEM_HISTORY_ON_REV" referencedColumnNames="rev"
                                 referencedTableName="revinfo"/>
    </changeSet>

</databaseChangeLog>