<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1761429066582-1" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="category_history"/>
            </not>
        </preConditions>
        <createTable tableName="category_history">
            <column name="rev" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_category_history"/>
            </column>
            <column name="revtype" type="SMALLINT"/>
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_category_history"/>
            </column>
            <column name="name" type="VARCHAR(100)"/>
        </createTable>
    </changeSet>

    <changeSet id="1761429066582-2" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="product_history" />
            </not>
        </preConditions>
        <createTable tableName="product_history">
            <column name="rev" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_product_history"/>
            </column>
            <column name="revtype" type="SMALLINT"/>
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_product_history"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="price" type="DECIMAL"/>
            <column name="discounted_price" type="DECIMAL"/>
            <column name="stock" type="INT"/>
            <column name="category_id" type="BIGINT"/>
            <column name="seller_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="1761429066582-3" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="FK_CATEGORY_HISTORY_ON_REV" />
            </not>
        </preConditions>
        <addForeignKeyConstraint baseColumnNames="rev" baseTableName="category_history"
                                 constraintName="FK_CATEGORY_HISTORY_ON_REV" referencedColumnNames="rev"
                                 referencedTableName="revinfo"/>
    </changeSet>

    <changeSet id="1761429066582-4" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="FK_PRODUCT_HISTORY_ON_REV" />
            </not>
        </preConditions>
        <addForeignKeyConstraint baseColumnNames="rev" baseTableName="product_history"
                                 constraintName="FK_PRODUCT_HISTORY_ON_REV" referencedColumnNames="rev"
                                 referencedTableName="revinfo"/>
    </changeSet>

</databaseChangeLog>