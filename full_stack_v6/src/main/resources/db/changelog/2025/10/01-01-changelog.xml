<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1759309857639-1" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="cart_item_sequence"/>
            </not>
        </preConditions>
        <createSequence incrementBy="50" sequenceName="cart_item_sequence" startValue="1"/>
    </changeSet>

    <changeSet id="1759309857639-2" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="cart_sequence"/>
            </not>
        </preConditions>
        <createSequence incrementBy="50" sequenceName="cart_sequence" startValue="1"/>
    </changeSet>

    <changeSet id="1759309857639-3" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cart"/>
            </not>
        </preConditions>
        <createTable tableName="cart">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cart"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="total_price" type="DECIMAL"/>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="1759309857639-4" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cart_item"/>
            </not>
        </preConditions>
        <createTable tableName="cart_item">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cartitem"/>
            </column>
            <column name="cart_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INT"/>
            <column name="price" type="DECIMAL"/>
            <column name="discount" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="1759309857639-5" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="FK_CARTITEM_ON_CART"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseColumnNames="cart_id" baseTableName="cart_item"
                                 constraintName="FK_CARTITEM_ON_CART" referencedColumnNames="id"
                                 referencedTableName="cart"/>
    </changeSet>

    <changeSet id="1759309857639-6" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="FK_CARTITEM_ON_PRODUCT"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseColumnNames="product_id" baseTableName="cart_item"
                                 constraintName="FK_CARTITEM_ON_PRODUCT" referencedColumnNames="id"
                                 referencedTableName="product"/>
    </changeSet>

    <changeSet id="1759309857639-7" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="FK_CART_ON_USER"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="cart"
                                 constraintName="FK_CART_ON_USER" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>