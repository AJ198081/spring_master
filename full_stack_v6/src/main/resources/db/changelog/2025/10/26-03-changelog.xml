<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1761441826500-1" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="customer_history"/>
            </not>
        </preConditions>

        <createTable tableName="customer_history">
            <column name="rev" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_customer_history"/>
            </column>
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_customer_history"/>
            </column>
            <column name="revtype" type="SMALLINT"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="phone" type="varchar(30)"/>
            <column name="user_id" type="BIGINT"/>
            <column name="cart_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="1761441826500-2" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="person_history"/>
            </not>
        </preConditions>

        <createTable tableName="person_history">
            <column name="rev" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_person_history"/>
            </column>
            <column name="revtype" type="SMALLINT"/>
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_person_history"/>
            </column>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="phone" type="varchar(30)"/>
            <column name="user_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="1761441826500-3" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="FK_CUSTOMER_HISTORY_ON_REV"/>
            </not>
        </preConditions>

        <addForeignKeyConstraint baseColumnNames="rev" baseTableName="customer_history"
                                 constraintName="FK_CUSTOMER_HISTORY_ON_REV" referencedColumnNames="rev"
                                 referencedTableName="revinfo"/>
    </changeSet>

    <changeSet id="1761441826500-4" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="FK_PERSON_HISTORY_ON_REV"/>
            </not>
        </preConditions>

        <addForeignKeyConstraint baseColumnNames="rev" baseTableName="person_history"
                                 constraintName="FK_PERSON_HISTORY_ON_REV" referencedColumnNames="rev"
                                 referencedTableName="revinfo"/>
    </changeSet>

</databaseChangeLog>