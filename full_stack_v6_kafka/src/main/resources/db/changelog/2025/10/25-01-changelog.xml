<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1761363277544-1" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="transfer_requests_seq"/>
            </not>
        </preConditions>
        <createSequence incrementBy="50" sequenceName="transfer_requests_seq" startValue="1"/>
    </changeSet>

    <changeSet id="1761363277544-2" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="transfer_requests"/>
            </not>
        </preConditions>
        <createTable tableName="transfer_requests">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_transfer_requests"/>
            </column>
            <column name="from_account_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="to_account_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>