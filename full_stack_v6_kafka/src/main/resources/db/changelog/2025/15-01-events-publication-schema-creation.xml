<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-event-publication-table" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="event_publication"/>
            </not>
        </preConditions>

        <createTable tableName="event_publication">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="listener_id" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="event_type" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="serialized_event" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="publication_date" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="completion_date" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
    </changeSet>

    <changeSet id="create-event-publication-archive-table" author="AJ">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="event_publication_archive" columnName="completion_date"/>
            </not>
        </preConditions>

        <createTable tableName="event_publication_archive">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_event_publication_archive"/>
            </column>
            <column name="listener_id" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="event_type" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="serialized_event" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="publication_date" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="completion_date" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
    </changeSet>

    <changeSet id="create-serialized-event-hash-index" author="aj">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists indexName="event_publication_serialized_event_hash_idx"/>
            </not>
        </preConditions>

        <createIndex indexName="event_publication_serialized_event_hash_idx"
                     tableName="event_publication"
                     unique="false">
            <column name="serialized_event"/>
        </createIndex>
    </changeSet>

    <changeSet id="create-completion-date-index" author="aj">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists indexName="event_publication_by_completion_date_idx"/>
            </not>
        </preConditions>

        <createIndex indexName="event_publication_by_completion_date_idx"
                     tableName="event_publication"
                     unique="false">
            <column name="completion_date"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>